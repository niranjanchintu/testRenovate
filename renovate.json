
{
"$schema": "https://docs.renovatebot.com/renovate-schema.json",
  
  "baseBranches": ["main"],
  "ignoreTests": true,
  "prHourlyLimit": 0,
  "schedule": ["at any time"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "automergeCondition": "success"
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ]
}


